# This part configures, where your Trilium server is running
upstream trilium {
  zone trilium 64k;
  server trilium:8080;
  keepalive 2;
}

# This part is for proxy and HTTPS configure
server {
    listen {{ nginx_container_https_port }} ssl;
    server_name {{ nginx_server_name }};
    ssl_certificate {{ nginx_server_cert_directory }}/live/{{ nginx_server_name }}/fullchain.pem;
    ssl_certificate_key {{ nginx_server_cert_directory }}/live/{{ nginx_server_name }}/privkey.pem;
    ssl_session_cache builtin:1000 shared:SSL:10m;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!eNULL:!EXPORT:!CAMELLIA:!DES:!MD5:!PSK:!RC4;
    ssl_prefer_server_ciphers on;
    access_log /var/log/nginx/access.log;

    location / {
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        proxy_pass http://trilium;
        proxy_read_timeout 90;
    }
}

# This part is for HTTPS forced
server {
    listen {{ nginx_container_http_port }};
    server_name {{ nginx_server_name }};
    return 301 https://$server_name$request_uri;
}
